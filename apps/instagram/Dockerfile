# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build instagram`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t instagram`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system instagram && \
          adduser --system -G instagram instagram

COPY dist/apps/instagram instagram
RUN chown -R instagram:instagram .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix instagram --omit=dev -f install

CMD [ "node", "instagram" ]
